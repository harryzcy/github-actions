{
  "extends": [
    "github>harryzcy/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "node-version: '(?<currentValue>.+?)'"
      ],
      "depNameTemplate": "node",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
