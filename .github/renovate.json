{
  "extends": [
    "github>harryzcy/renovate-config"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "node-version: ['\"]?(?<currentValue>.*)['\"]?"
      ],
      "depNameTemplate": "node",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "regex:^(?<major>\\d+)$"
    }
  ]
}
